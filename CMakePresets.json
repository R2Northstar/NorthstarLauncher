{
    "version": 3,
    "configurePresets": [
			{
				"name": "windows-base",
				"hidden": true,
				"generator": "Ninja",
				"binaryDir": "${sourceDir}/build/${presetName}",
				"installDir": "${sourceDir}/build/${presetName}",
				"cacheVariables": {
					"CMAKE_C_COMPILER": "clang-cl.exe",
					"CMAKE_CXX_COMPILER": "clang-cl.exe"
				},
				"condition": {
					"type": "equals",
					"lhs": "${hostSystemName}",
					"rhs": "Windows"
				}
			},
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
